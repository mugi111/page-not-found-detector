{
    "manifest_version": 2,
    "name": "404 detector",
    "description": "",
    "version": "0.0.5",
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["script.js"],
        "css": ["style.css"]
    }],
    "browser_action": {
        "default_title": "404 detector",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
